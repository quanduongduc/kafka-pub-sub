{
    "configurations": [
        {
            "name": "Python: Registration Service",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--port=5000",
            ],
            "jinja": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}/services/registration/",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/services/registration/src"
            }
        },
        {
            "name": "Python: SSE-SERVER",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}/services/notification/src",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/services/notification/src/sse-server"
            }
        }
    ]
}